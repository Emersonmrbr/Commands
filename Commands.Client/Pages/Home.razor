        }
    </ul>
</FluentCard>

<FluentCard Height="auto" Style="border: solid 0.5px var(--neutral-layer-1)">
    <FluentStack HorizontalAlignment="@HorizontalAlignment.Start"
                 VerticalAlignment="@VerticalAlignment.Center"
                 Style="height: 48px; padding-inline-end: 10px;">
        <FluentIcon Value="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Color.Size32.ClipboardTextEdit())" Color="@Color.Warning" />
        <FluentLabel Typo="Typography.H4">
            Visão Geral dos Guias
        </FluentLabel>
    </FluentStack>

    @foreach (var guide in guides)
    {
        <FluentStack HorizontalAlignment="@HorizontalAlignment.Start"
                     VerticalAlignment="@VerticalAlignment.Center"
                     Style="height: 48px; padding-inline-end: 10px; border: solid 1px var(--success)">
            <FluentIcon Value="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Regular.Size32.CheckmarkCircle())" Color="@Color.Success" />
            <FluentLabel Typo="Typography.H5">
                <FluentNavLink Href="@guide.Link" Target="_blank"> @guide.Title <b>@guide.LinkText</b>  </FluentNavLink>
            </FluentLabel>
        </FluentStack>
        <ul>
            <li>
                <FluentStack HorizontalAlignment="@HorizontalAlignment.Start"
                             VerticalAlignment="@VerticalAlignment.Center"
                             Style="height: 48px; padding-inline-end: 10px;">
                    <FluentLabel Typo="Typography.H5">
                        Este guia inclui:
                    </FluentLabel>
                </FluentStack>
            </li>
            <FluentDivider></FluentDivider>
            @foreach (var content in guide.Contents)
            {
                <li>
                    <FluentStack HorizontalAlignment="@HorizontalAlignment.Start"
                                 VerticalAlignment="@VerticalAlignment.Center"
                                 Style="height: 48px; padding-inline-end: 10px;">
                        <FluentIcon Value=@content.IconType ColorType=@content.ColorType />
                        <FluentLabel Typo="Typography.H5">
                            @content.Title
                        </FluentLabel>
                    </FluentStack>
                    <FluentDivider></FluentDivider>
                </li>
            }
        </ul>
    }
</FluentCard>

