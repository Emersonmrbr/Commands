                 VerticalAlignment="@VerticalAlignment.Center"
                 Style="height: 48px; padding-inline-end: 10px;">
        <FluentIcon Value="@(new Microsoft.FluentUI.AspNetCore.Components.Icons.Color.Size32.CheckmarkCircle())" Color="@Color.Error" />
        <FluentLabel Typo="Typography.H4">
            Como Usar
        </FluentLabel>
    </FluentStack>
    <ul>
        @foreach (var content in howUseContents)
        {
            <li>
