@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        COMANDOS
        <FluentSpacer />
        <img src="img\logo.svg" width="250"/>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
        <FluentToastProvider MaxToastCount="10" Position="ToastPosition.TopRight" Timeout="1500"/>
    </FluentStack>
    <FluentFooter>
        <a href="http://www.nucleomap.com.br" target="_blank">Núcleo MAP</a>
        <FluentSpacer />
        <a href="https://emersonmrbr.github.io/portfolio1/" target="_blank">Github</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
